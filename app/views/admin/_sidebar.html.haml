/ BEGIN SIDEBAR
#main-menu.page-sidebar
  / BEGIN MINI-PROFILE
  #main-menu-wrapper.page-sidebar-wrapper.scrollbar-dynamic
    .user-info-wrapper
      - if !current_user.nil? && current_user.avatar.present?
        .profile-wrapper
          = image_tag(current_user.avatar.url, size: "69")
        .user-info
          .greeting Welcome
          .username
            = current_user.first_name
            %span.semi-bold= current_user.last_name
          .status
            Status
            %a{:href => "#"}
              .status-icon.green
              Online
    / END MINI-PROFILE
    / BEGIN SIDEBAR MENU
    %p.menu-title
      BROWSE
      %span.pull-right
        %a{:href => "javascript:;"}
          %i.fa.fa-refresh
    %ul
      %li.start
        = link_to root_path, class: "title" do
          %i.fa.fa-home
          Dashboard
      %li
        = link_to admin_companies_path, class: "title" do
          %i.fa.fa-building
          Companies
      %li
        = link_to admin_campaigns_path, class: "title" do
          %i.fa.fa-briefcase
          Campaigns
    .clearfix
    / END SIDEBAR MENU
.footer-widget
  .progress.transparent.progress-small.no-radius.no-margin
    .progress-bar.progress-bar-success.animate-progress-bar{"data-percentage" => "79%"}
  .pull-right
    .details-status
      %span.animate-number{"data-animation-duration" => "560", "data-value" => "86"}>
      \%
    %a{:href => "lockscreen.html"}
      %i.fa.fa-power-off
/ END SIDEBAR
