= simple_form_for ['admin', @campaign], defaults: { input_html: { class: 'form-control' } } do |f|
  - if @campaign.errors.any?
    #error_explanation
      %h2
        = pluralize(@campaign.errors.count, "error")
        prohibited this campaign from being saved:
      %ul
        - @campaign.errors.full_messages.each do |message|
          %li= message
  = f.input :name
  = f.association :company
  = f.input :start_date,  as: :date_time_picker
  = f.input :end_date ,  as: :date_time_picker
  = f.button :submit
