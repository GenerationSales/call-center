%p#notice= notice
%h1 Listing Campaigns
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Company
      %th Start date
      %th End date
      %th{:colspan => "3"}
  %tbody
    - @campaigns.each do |campaign|
      %tr
        %td= campaign.name
        %td= campaign.company.name
        %td= campaign.start_date
        %td= campaign.end_date
        %td= link_to 'Show', campaign
        %td= link_to 'Edit', edit_campaign_path(campaign)
        %td= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Campaign', new_admin_campaign_path, class: "btn btn-default"
