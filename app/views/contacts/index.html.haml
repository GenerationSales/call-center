%p#notice= notice
%h1 Listing Contacts
%table.table
  %thead
    %tr
      %th First name
      %th Last name
      %th Number
      %th Address
      %th Address2
      %th City
      %th State
      %th Company
      %th{:colspan => "3"}
  %tbody
    - @contacts.each do |contact|
      %tr
        %td= contact.first_name
        %td= contact.last_name
        %td= contact.number
        %td= contact.address
        %td= contact.address2
        %td= contact.city
        %td= contact.state
        %td= contact.company_id
        %td= link_to 'Show', contact
        %td= link_to 'Edit', edit_contact_path(contact)
        %td= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Contact', new_contact_path
